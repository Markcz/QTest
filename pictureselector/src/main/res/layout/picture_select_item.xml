<?xml version="1.0" encoding="utf-8"?>
<com.mark.pictureselector.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/v_click"
        android:background="@drawable/bg_iv_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ImageView
        android:id="@+id/iv_check"
        android:layout_gravity="top|end"
        android:padding="5dp"
        android:src="@drawable/iv_check_selector"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />



</com.mark.pictureselector.widget.SquareFrameLayout>